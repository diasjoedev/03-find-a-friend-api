generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PetEnergy {
  VERY_LOW
  LOW
  NORMAL
  HIGH
  VERY_HIGH
}

model Org {
  id            String   @id @default(cuid())
  orgName       String   @map("org_name")
  responsible   String
  zipCode       String
  address       String
  city          String
  state         String
  whatsapp      String
  email         String
  password_hash String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  latitude      Decimal
  longitude     Decimal
  Pet           Pet[]

  @@map("orgs")
}

model Pet {
  id                      String    @id @default(cuid())
  name                    String
  photos                  String[]
  description             String
  energy                  PetEnergy
  environment             String
  size                    String
  requirementsForAdoption String[]
  org                     Org       @relation(fields: [orgId], references: [id])
  orgId                   String

  @@map("pets")
}
